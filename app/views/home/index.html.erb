<%# Banner %>
<div class="bg-gray-800 text-white text-center py-20">
  <h1 class ="text-5xl font-bold mb-4">Welcome to ZenBar</h1>
  <p class="text-xl mb-8">The best coffee</p>
  <%= link_to "All coffees", root_path, class: "bg-gray-500 hover:bg-gray-600 text-white font-bold py-2 px-4 rounded" %>
</div>

<%# Products Sesion %>
<div class="flex flex-wrap justify-center mt-8 items-center gap-10">
  <% @main_products.each do |product| %>
    <%= link_to product_path(product) %>
    <div class="flex flex-col mb-4">
      <h2 class="text-white font-medium text-lg text-center mb-6">
        <%= product.name %>
        <%= product.images.present? ? image_tag(product.images, class: "max-w-lg") : image_tag("https://via.placeholder.com/300") %>
      </h2>
    </div>
  <% end %>
</div>

